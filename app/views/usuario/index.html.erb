<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>Lista de Usuários</h1>
      <%= render partial: 'shared/navbar' =>
      <div align="right">
        <%= link_to raw("<i class=\"fa fa-plus-circle\"> Criar Usuário </i>"),
                    new_usuario_path,
                    class: "btn btn-success btn-small" %>
      </div>
    </div>
    <div id='cadastros'>
      <table id="Usuário" class="display">
        <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
              
         </tr>
          <% end %>
          </thead>
        <tbody>
        <% @usuarios.each do |usuario| %>
              <tr>
                <td><%= usuario.try(:nome) %></td>
                
                <td><%= usuario.try(:email) %></td>

                   <td><%= bs_button_to raw("<i class=\"fa fa-pencil-square-o\"></i>"),
                                    edit_usuario_path(usuario),tooltip: "Editar Usuário",
                                    class: "btn btn-large btn-primary",
                                    method: :get %></td>
                
                
                    <td><%= bs_button_to raw("<i class=\"fa fa-trash-o\"></i>"),
                                         usuario, tooltip: "Excluir Usuário",
                                         class: "btn btn-large btn-danger",
                                         method: :delete, data: {confirm: 'Tem certeza que deseja excluir?'} %></td>
                
              </tr>
          <% end %>
        </tbody>
          </table>
    </div>
    <br/>
  </div>
</div>