<h1>TOP 5</h1>
<h3>Top 5 Convênios Mais caros</h3>
<table id="top5" class="display table-striped">

  <thead>
    <tr>
        <th>Número</th>
        <th>Uf</th>
        <th>Município</th>
        <th>Situação</th>
        <th>Descrição</th>
        <th>Orgão Superior</th>
        <th>Valor</th>
        <th>Mais Detalhes</th>
    </tr>
  </thead>

  <tbody>
    <% @convenios.sort_by { |convenio| convenio[:valorconvenio] }%>
    <% @convenios.take(5).each do |convenio| %>
      <tr>
        <td><%= convenio.numeroconvenio %></td>
        <td><%= convenio.uf %></td>
        <td><%= convenio.nomemunicipio %></td>
        <td><%= convenio.situacaoconvenio %></td>
        <td><%= convenio.objetoconvenio %></td>
        <td><%= convenio.nomeorgaosuperior %></td>
        <td><%= convenio.valorconvenio %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

