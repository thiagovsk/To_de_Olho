<%= simple_form_for reclamacao, url: {action:"create"} do |f| %>
	<%= f.input :descricao , :label => "Descrição da sua reclamação", as: :text%>
	<%=  f.hidden_field :convenio_id, :value => params[:convenio_id]  %>
	
	<%= submit_tag "Reclamar",:name => nil,class:"btn btn-primary dropdown-toggle icon-white icon-user" %>
<%end%>